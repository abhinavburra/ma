pipeline {
    agent any
    environment {
        ENV_NAME = "${env.BRANCH_NAME == "main" ? "master" : "production"}"
    }
	  stages {
	      stage("build")
		  {
	        steps {
		  if($ENV_NAME=="main"){
		  
		       echo "building application"
		       }
		       else if($ENV_NAME=="master"){
		       echo "BUILDING THE APPLICATION IN DEV ENVIRONMENT"
		       }
			   }
		
		    }
			stage("test")
		  {
	        steps {
		       echo "testing application"
			   }
		
		    }
			stage("deploy")
		  {
	        steps {
		       echo "deploying application"
			   }
		
		    }
		}
		}
			 
