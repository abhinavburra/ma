pipeline {
    agent any
	  stages {
	      stage("build")
		  {
	        steps {
		  if(env.BRANCH_NAME=="main"){
		  
		       echo "building application"
		       }
		       else if(env.BRANCH_NAME=="master"){
		       echo "BUILDING THE APPLICATION IN DEV ENVIRONMENT"
		       }
			   }
		
		    }
			stage("test")
		  {
	        steps {
		       echo "testing application"
			   }
		
		    }
			stage("deploy")
		  {
	        steps {
		       echo "deploying application"
			   }
		
		    }
		}
		}
			 
